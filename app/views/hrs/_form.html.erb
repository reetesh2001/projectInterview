<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form</title>
   <%= stylesheet_link_tag 'form' %>
</head>
<body>
  <div class="container">
    <%= form_with(model: @hr, local: true) do |form| %>
      <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
        <% if @hr.errors.any? %>
          <% @hr.errors.full_messages_for(:name).each do |message| %>
            <div class="error-message"><%= message %></div>
          <% end %>
        <% end %>
      </div>
      <div >
        <%= form.label :email %>
        <%= form.email_field :email %>
				<% if @hr.errors.any? %>
          <% @hr.errors.full_messages_for(:email).each do |message| %>
            <div class="error-message"><%= message %></div>
          <% end %>
        <% end %>
      </div>
      <div >
        <%= form.label :status %>
        <%= form.text_field :status %>
				<% if @hr.errors.any? %>
          <% @hr.errors.full_messages_for(:status).each do |message| %>
            <div class="error-message"><%= message %></div>
          <% end %>
        <% end %>
      </div>
      <div >
        <%= form.label :password %>
        <%= form.password_field :password %>
				<% if @hr.errors.any? %>
          <% @hr.errors.full_messages_for(:password).each do |message| %>
            <div class="error-message"><%= message %></div>
          <% end %>
        <% end %>
      </div>
      <div >
        <%= form.label :phone_number %>
        <%= form.telephone_field :phone_number %>
				<% if @hr.errors.any? %>
          <% @hr.errors.full_messages_for(:phone_number).each do |message| %>
            <div class="error-message"><%= message %></div>
          <% end %>
        <% end %>
      </div>
       <div >
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation %>
				<% if @hr.errors.any? %>
          <% @hr.errors.full_messages_for(:password_confirmation).each do |message| %>
            <div class="error-message"><%= message %></div>
          <% end %>
        <% end %>
      </div>
      <div >
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</body>
</html>
